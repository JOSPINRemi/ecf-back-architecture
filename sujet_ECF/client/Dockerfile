FROM node:14-alpine AS build

WORKDIR /app

ENV REACT_APP_COMMON_DATA_SERVICE_PORT=${REACT_APP_COMMON_DATA_SERVICE_PORT}
ENV REACT_APP_AUTHENTICATION_SERVICE_PORT=${REACT_APP_AUTHENTICATION_SERVICE_PORT}
ENV REACT_APP_SEARCH_SUGGESTION_SERVICE_PORT=${REACT_APP_SEARCH_SUGGESTION_SERVICE_PORT}
ENV REACT_APP_COMMON_DATA_SERVICE_URL=localhost:9000/
ENV REACT_APP_AUTHENTICATION_SERVICE_URL=localhost:7000/
ENV REACT_APP_SEARCH_SUGGESTION_SERVICE_URL=localhost:10000/

COPY package.json ./

COPY yarn.lock ./

RUN npm install yarn

RUN yarn

COPY . .

RUN yarn build


FROM nginx:alpine

WORKDIR /usr/share/nginx/html

RUN rm -f ./*

COPY --from=build /app/build ./

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]